# ML Server Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# REQUIRED VARIABLES
# ============================================

# Server Configuration
PORT=8000
ENVIRONMENT=production

# CORS Configuration (allow requests from frontend and backend)
CORS_ORIGINS=https://your-frontend-domain.vercel.app,https://your-backend-service.onrender.com

# ============================================
# OPTIONAL VARIABLES (with defaults)
# ============================================

# Model Configuration
MODEL_PATH=models
MODEL_CACHE_SIZE=100
MODEL_TIMEOUT=30

# Performance
MAX_WORKERS=4
REQUEST_TIMEOUT=60
MEMORY_LIMIT=512

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
API_KEY=your-optional-ml-api-key
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Features
ENABLE_SHAP_EXPLANATIONS=true
ENABLE_MODEL_METRICS=true
ENABLE_PREDICTION_LOGGING=false

# Development (only for local development)
# CORS_ORIGINS=http://localhost:3000,http://localhost:5000
# ENVIRONMENT=development

# Frontend Environment Variables
# Copy this file to .env.local for Next.js
# Usage: cp example.env .env.local

# ============================================
# REQUIRED VARIABLES
# ============================================

# API Backend URL (Render deployment)
NEXT_PUBLIC_API_URL=https://your-backend-service.onrender.com/api

# ML Server URL (Render deployment)
NEXT_PUBLIC_ML_SERVER_URL=https://your-ml-service.onrender.com

# ============================================
# OPTIONAL VARIABLES (with defaults)
# ============================================

# App Configuration
NEXT_PUBLIC_APP_NAME=MediMitra Pro
NEXT_PUBLIC_APP_VERSION=1.0.0

# Features
NEXT_PUBLIC_ENABLE_CHATBOT=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# File Upload
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,docx

# Session
NEXT_PUBLIC_SESSION_TIMEOUT=1800000

# Development (only for local development)
# NEXT_PUBLIC_API_URL=http://localhost:5000/api
# NEXT_PUBLIC_ML_SERVER_URL=http://localhost:8000
